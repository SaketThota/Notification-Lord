{
    "manifest_version": 2,
    "name": "Notification Lord",
    "version": "1.0",
    "icons": {
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.in/*",
                "https://www.flipkart.com/*",
                "https://www.myntra.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "./dist/main.js"
        ]
    },
    "permissions": [
        "tabs",
        "storage",
        "*://api.sendgrid.com/*",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "https://api.sendgrid.com/api/*",
        "https://api.sendgrid.com/v3/mail/*",
        "https://api.sendgrid.com/*/*",
        "https://api.sendgrid.com/api/mail.send.json"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Notification-Lord"
    },
    "web_accessible_resources": [
        "*.png"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}